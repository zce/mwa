{
  "name": "mwa",
  "version": "0.1.0",
  "description": "Easily create your own middleware layer.",
  "keywords": [
    "mwa",
    "compose",
    "middleware",
    "zce"
  ],
  "homepage": "https://github.com/zce/mwa#readme",
  "bugs": {
    "url": "https://github.com/zce/mwa/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zce/mwa.git"
  },
  "license": "MIT",
  "author": {
    "name": "zce",
    "email": "w@zce.me",
    "url": "https://zce.me"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "lint": "eslint src",
    "compile": "tsc",
    "build": "run-s clean lint compile",
    "test": "jest",
    "cov": "jest --coverage",
    "prepare": "run-s build test"
  },
  "eslintConfig": {
    "extends": "standard-ts",
    "rules": {
      "@typescript-eslint/promise-function-async": "off",
      "@typescript-eslint/return-await": "off"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "renovate": {
    "extends": [
      "zce"
    ]
  },
  "devDependencies": {
    "@types/jest": "26.0.12",
    "@types/node": "14.6.1",
    "eslint": "7.9.0",
    "eslint-config-standard-ts": "18.0.2",
    "jest": "26.4.2",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.2",
    "ts-jest": "26.3.0",
    "typescript": "4.0.2"
  },
  "engines": {
    "node": ">=10"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
